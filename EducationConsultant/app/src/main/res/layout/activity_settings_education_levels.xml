<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SettingsEducationLevelsActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- android.support.v7.widget.Toolbar : This is the full path of the Toolbar class in the Support Library -->
        <!-- ?attr/actionBarSize : The ?attr prefix means that we want to use an attribute from the current theme. -->
        <!-- ?attr/colorPrimary : Make the toolbar's background the same color as the app bar we had previously  -->
        <!-- ThemeOverlay : Toolbar will look like app bar from theme Theme.AppCompat.Light -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_edu_level"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <Switch
        android:id="@+id/elementary_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:key="elementary_school_key"
        android:text="@string/elementary_school_title"
        android:textOn="@string/on"
        android:textOff="@string/off"
        android:textSize="18dp"
        android:padding="12dp"
        android:onClick="onClickSwitch"/>

    <Switch
        android:id="@+id/middle_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:key="middle_school_key"
        android:text="@string/middle_school_title"
        android:textOn="@string/on"
        android:textOff="@string/off"
        android:textSize="18dp"
        android:padding="12dp"
        android:onClick="onClickSwitch"/>

    <Switch
        android:id="@+id/high_school"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:key="high_school_key"
        android:text="@string/high_school_title"
        android:textOn="@string/on"
        android:textOff="@string/off"
        android:textSize="18dp"
        android:padding="12dp"
        android:onClick="onClickSwitch"/>

    <Switch
        android:id="@+id/collage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:key="collage_key"
        android:text="@string/collage_title"
        android:textOn="@string/on"
        android:textOff="@string/off"
        android:textSize="18dp"
        android:padding="12dp"
        android:onClick="onClickSwitch"/>

    <Switch
        android:id="@+id/masters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:key="masters_key"
        android:text="@string/masters_title"
        android:textOn="@string/on"
        android:textOff="@string/off"
        android:textSize="18dp"
        android:padding="12dp"
        android:onClick="onClickSwitch"/>

    <Switch
        android:id="@+id/doctors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:key="doctors_key"
        android:text="@string/doctors_title"
        android:textOn="@string/on"
        android:textOff="@string/off"
        android:textSize="18dp"
        android:padding="12dp"
        android:onClick="onClickSwitch"/>


</LinearLayout>