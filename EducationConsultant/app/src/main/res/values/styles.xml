<resources>

    <!-- Base application theme. -->
    <!-- parent: This attribute specifies where the style should inherit its properties from -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize theme here. -->

        <!-- colorPrimary : main color; this color gets used for app bar -->
        <!-- colorPrimaryDark : a darker variant of main color; this color gets used as the color of the status bar -->
        <!-- colorAccent : color of any UI control -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- colorControlActivated: Active thumb color -->
        <!-- colorSwitchThumbNormal: Inactive thumb color -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorSwitchThumbNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
